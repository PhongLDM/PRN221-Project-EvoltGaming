@page
@model EvoltingStore.Pages.CartModel
@{
    ViewData["Title"] = "Shopping Cart";
}
<section class="shopping-cart spad">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="shopping__cart__table">
                    <table>
                        <thead>
                            <tr>
                                <th>Product</th>
                                <th>Price</th>
                                <th>Quantity</th>
                                <th>Total</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.CartItems)
                            {
                                <tr>
                                    <td class="product__cart__item">
                                        <div class="product__cart__item__pic">
                                            <img src="@item.Game.Image" alt="">
                                        </div>
                                        <div class="product__cart__item__text">
                                            <h6>@item.Game.Name</h6>
                                        </div>
                                    </td>
                                    <td class="cart__price">$@item.Game.Price</td>
                                    <td class="cart__quantity">
                                        <form method="post" asp-page-handler="Update">
                                            <input type="hidden" name="gameId" value="@item.Game.GameId" />
                                            <div class="quantity">
                                                <div class="pro-qty">
                                                    <input type="number" name="quantity" value="@item.Quantity" min="1" />
                                                </div>
                                            </div>
                                            <button type="submit" class="btn btn-sm btn-primary">Update</button>
                                        </form>
                                    </td>
                                    <td class="cart__total">$@(item.Game.Price * item.Quantity)</td>
                                    <td class="cart__close">
                                        <form method="post" asp-page-handler="Remove">
                                            <input type="hidden" name="gameId" value="@item.Game.GameId" />
                                            <button type="submit" class="btn btn-sm btn-danger">Remove</button>
                                        </form>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
                <div class="row">
                    <div class="col-lg-6">
                        <div class="cart__btn">
                            <a href="/Categories">Continue Shopping</a>
                        </div>
                    </div>
                    <div class="col-lg-6">
                        <div class="cart__total__proceed">
                            <h6>Cart total</h6>
                            <ul>
                                <li>Total <span>$@Model.TotalPrice</span></li>
                            </ul>
                            <a href="#" class="primary-btn">PROCEED TO CHECKOUT</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
